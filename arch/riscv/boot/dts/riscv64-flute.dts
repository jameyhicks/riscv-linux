/dts-v1/;
/ {
	compatible = "riscv,spike";

	#address-cells = <1>;
	#size-cells = <1>;

	cpu0: cpu {
	      compatible = "cpu";
	      clock-frequency = <250000000>;
	};

	intc0: cpuintc {
	       #address-cells = <1>;
	       #size-cells = <1>;
	       #interrupt-cells = <1>;
	       compatible = "riscv,intc-1.00.a";
	       interrupt-controller;
	       interrupt-parent = <&intc0>; // root interrupt-controller is its own parent
	       reg = <3>;
	};
};
